{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JobHunt",
  "version": "0.1.0",
  "identifier": "io.jobhunt.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "JobHunt",
        "width": 1100,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "externalBin": ["bin/engine"]
  }
}





